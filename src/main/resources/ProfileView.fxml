<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.Controllers.ProfileController">

    <children>

        <BorderPane AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0">

            <left>
                <VBox prefWidth="220" spacing="10" styleClass="profile-menu">
                    <Button fx:id="myPostsButton"
                            text="My posts"
                            onAction="#showMyPosts" />

                    <Button text="Menu 2" />
                    <Button text="Menu 3" />

                    <Button onAction="#testMethod"
                            text="View Bulletin" />

                    <Button onAction="#logout"
                            text="Logout" />
                </VBox>
            </left>

            <center>

                <BorderPane fx:id="contentPane">

                    <top>
                        <HBox spacing="20">
                            <VBox alignment="TOP_CENTER" spacing="10">
                                <ImageView fx:id="profileImage"
                                           fitHeight="100"
                                           fitWidth="100"
                                           preserveRatio="true"
                                           smooth="true">
                                    <VBox.margin>
                                        <Insets left="20" top="20"/>
                                    </VBox.margin>
                                </ImageView>
                            </VBox>

                            <VBox spacing="8">
                                <TextArea fx:id="bioTextArea"
                                          editable="false"
                                          prefHeight="200"
                                          prefWidth="500"
                                          wrapText="true"/>

                                <HBox spacing="10" alignment="CENTER_RIGHT">
                                    <Button fx:id="editButton"
                                            text="Edit"
                                            onAction="#editBio"/>

                                    <Button fx:id="saveButton"
                                            text="Save"
                                            disable="true"
                                            onAction="#saveBio"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </top>

                    <center>
                        <GridPane BorderPane.alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="100"/>
                                <ColumnConstraints prefWidth="100"/>
                                <ColumnConstraints prefWidth="100"/>
                                <ColumnConstraints prefWidth="100"/>
                            </columnConstraints>

                            <rowConstraints>
                                <RowConstraints prefHeight="30"/>
                            </rowConstraints>
                        </GridPane>
                    </center>

                </BorderPane>

            </center>

        </BorderPane>

    </children>
</AnchorPane>
