<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@/css/board.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller">

<!--Top Toolbar-->
<top>
    <ToolBar>
        <Button onAction="#newPost" text="New note" />
        <Separator />
        <Button onAction="#handleUsers" text="Handle users" />
    </ToolBar>
</top>

<!--Center Board-->
<center>
<ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent;">
<FlowPane fx:id="postContainer" hgap="20" vgap="20">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
            <children>
               <ImageView fitHeight="300.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@Images/Background.jpeg" />
                  </image>
               </ImageView>
            </children>
        </FlowPane>
        </ScrollPane>
    </center>
</BorderPane>
