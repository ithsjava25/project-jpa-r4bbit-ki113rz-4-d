<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" styleClass="settings-root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.SettingsController">

    <Label styleClass="title" text="Profile Information" />

    <GridPane hgap="15" styleClass="settings-grid" vgap="12">

        <padding>
            <Insets top="10" />
        </padding>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <Label fx:id="nameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <HBox fx:id="nameEditBox" spacing="8" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="firstNameField" promptText="First name" />
            <TextField fx:id="lastNameField" promptText="Last name" />
        </HBox>

        <Button onAction="#editName" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="0" />

        <Button fx:id="saveNameButton" onAction="#saveName" text="Save" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <Button fx:id="cancelNameButton" onAction="#cancelNameEdit" styleClass="secondary" text="Cancel" visible="false" GridPane.columnIndex="4" GridPane.rowIndex="0" />

        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <TextField fx:id="usernameTextfield" promptText="Enter new username" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Button onAction="#editUsername" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="1" />

        <Button fx:id="saveUsernameButton" onAction="#saveUsername" text="Save" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <Button fx:id="cancelUsernameButton" onAction="#cancelUsernameEdit" styleClass="secondary" text="Cancel" visible="false" GridPane.columnIndex="4" GridPane.rowIndex="1" />

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

        <Button onAction="#changePassword" text="Change password" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Button fx:id="savePasswordButton" onAction="#savePassword" text="Save" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <Button fx:id="cancelPasswordButton" onAction="#cancelPasswordEdit" styleClass="secondary" text="Cancel" visible="false" GridPane.columnIndex="4" GridPane.rowIndex="2" />

        <PasswordField fx:id="oldPasswordField" promptText="Old password" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="3" />

        <PasswordField fx:id="newPasswordField" promptText="New password" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3" />

        <columnConstraints>
            <ColumnConstraints minWidth="100" />
            <ColumnConstraints minWidth="140" />
            <ColumnConstraints minWidth="130" />
            <ColumnConstraints minWidth="90" />
            <ColumnConstraints minWidth="90" />
        </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>
   <Button text="Delete account" alignment="BOTTOM_RIGHT" styleClass="delete-account-button" onAction="#handleDeleteAccount"/>

</VBox>
