<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.SettingsController">


    <Label text="Profile Information" />

    <GridPane hgap="15" vgap="10">
        <padding>
            <Insets top="10" />
        </padding>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <Label fx:id="nameLabel"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0" />

        <HBox fx:id="nameEditBox"
              spacing="8"
              GridPane.columnIndex="1"
              GridPane.rowIndex="0"
              visible="false">
            <TextField fx:id="firstNameField" promptText="First name"/>
            <TextField fx:id="lastNameField" promptText="Last name"/>
        </HBox>

        <Button text="Edit"
                GridPane.columnIndex="2"
                GridPane.rowIndex="0"
                onAction="#editName"/>

        <Button fx:id="saveNameButton"
                text="Save"
                GridPane.columnIndex="3"
                GridPane.rowIndex="0"
                visible="false"
                onAction="#saveName"/>

        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <Label fx:id="usernameLabel"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

        <TextField fx:id="usernameTextfield"
                   promptText="Enter new username"
                   visible="false"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Button text="Edit"
                GridPane.columnIndex="2"
                GridPane.rowIndex="1"
                onAction="#editUsername"/>

        <Button fx:id="saveUsernameButton"
                text="Save"
                GridPane.columnIndex="3"
                GridPane.rowIndex="1"
                visible="false" onAction="#saveUsername"/>

        <Button text="Change password"
                GridPane.columnIndex="0"
                GridPane.rowIndex="2"
                onAction="#changePassword"/>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

</VBox>
