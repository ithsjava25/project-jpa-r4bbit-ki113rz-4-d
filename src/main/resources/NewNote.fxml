<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.Controllers.NewNoteController">

    <Label text="Create a new note"
           style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <TextField fx:id="subjectField"
               promptText="Subject"/>

    <TextArea fx:id="messageArea"
              promptText="Message"
              wrapText="true"
              prefRowCount="4"/>

    <MenuButton fx:id="categoryMenu"
                text="Choose category"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button fx:id="saveButton" text="Post note" onAction="#handleSave"/>
    </HBox>

</VBox>
